{% if menu|length > 0 %}
    <div class="menubar ui-widget-header ui-corner-all">
        {% for key,categoryMenu in menu %}
            {% if categoryMenu|length == 1 %}
                {% for module in categoryMenu %}
                    <a href="/display/{{ module.display }}" class="">{{ module.name }}</a>
                {% endfor %}
            {% elseif categoryMenu|length > 1 %}
                <a href="#" class="module_menu_button ui-state-default ui-button-text-icon-secondary">{{ key }}</a>
                <ul>
                    {% for module in categoryMenu %}
                        <li><a href="/display/{{ module.display }}" class="">{{ module.name }}</a></li>
                    {% endfor %}
                </ul>
            {% endif %}
        {% endfor %}
        <a id="user_logout" href="{{ path('fos_user_security_logout') }}" class="logout button-right ui-widget-content ui-state-default" title="logout">Logout: nikolns</a>
        <progress class="button-right" id="ajax_spinner"></progress>
        <a id="button_reload" href="#" data-button-icon-primary="ui-icon-gear" class="ui-state-error ">Apply Config</a>
    </div>
{% endif %}
