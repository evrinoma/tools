{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/loginMain.css') }}">
    <link rel="stylesheet" href="{{ asset('build/loginUtils.css') }}">
{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-t-50 p-b-90">
                <form class="login100-form validate-form flex-sb flex-w" action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                    <div class="login-container">
                        <span class="login100-form-title p-b-51">Login</span>
                        <form>
                            <div class="wrap-input100 validate-input m-b-16" data-validate="Username is required">
                                {#<input class="input100" type="text" name="username" placeholder="Username">#}
                                {#<label for="username">{{ 'security.login.username'|trans }}</label>#}
                                <input class="input100" type="text" placeholder="Username" id="username" name="_username" value="{{ last_username }}" required="required"/>
                                <span class="focus-input100"></span>
                            </div>
                            <div class="wrap-input100 validate-input m-b-16" data-validate="Password is required">
                                {#<input class="input100" type="password" name="pass" placeholder="Password">#}
                                {#<label for="password">{{ 'security.login.password'|trans }}</label>#}
                                <input class="input100" type="password" placeholder="Password" id="password" name="_password" required="required"/>
                                <span class="focus-input100"></span>
                            </div>
                            <div class="flex-sb-m w-full p-t-3 p-b-24">
                                <div class="contact100-form-checkbox">
                                    {#<input type="checkbox" id="remember_me" name="_remember_me" value="on"/>#}
                                    {#<label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>#}
                                    <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                                    <label class="label-checkbox100" for="ckb1">
                                        Remember me
                                    </label>
                                </div>
                            </div>
                            <div class="container-login100-form-btn m-t-17">
                                {#<input type="submit" class="login login-submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>#}
                                <input type="submit" class="login100-form-btn" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
                                {#<button class="login100-form-btn">                            Login                        </button>#}
                            </div>
                        </form>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock body %}
