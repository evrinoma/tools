<!DOCTYPE html>
<html>
<head>
    {% block meta %}
        <meta charset="UTF-8">
    {% endblock meta %}
    <title>{% block title %}Wellcome{% endblock %}</title>

    {% block stylesheets %}
        {% include 'base/css.html.twig' %}
    {% endblock stylesheets %}

    {% block load_data %}
    {% endblock load_data %}
</head>

<body>
{% block body %}
    {% apply spaceless %}
        {% block menubar %}
            <div>
                <div class="menu">
                    <nav>
                        {% set menuItem = knp_menu_get('main', [], {'tag': constant('Evrinoma\\MenuBundle\\Menu\\MenuInterface::DEFAULT_TAG') }) %}
                        {{ knp_menu_render(menuItem) }}
                    </nav>
                </div>
                {% block spinner %}
                    <div id="spinner">
                        <div class="ui active centered inline loader"></div>
                    </div>
                {% endblock %}
            </div>
        {% endblock %}
        <div id="page">
            {% block page %}
            {% endblock %}
        </div>
        <div id="footer">
            <hr align="center">
            <div id="footer_content">
                {% block footer %}
                {% endblock %}
            </div>
        </div>
    {% endapply %}
{% endblock %}
{% block javascripts %}
    {% include 'base/js.html.twig' %}
{% endblock %}
</body>
</html>
