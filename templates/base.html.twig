<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Wellcome{% endblock %}</title>
    {% block stylesheets %}
    {% endblock %}
</head>
<body>
{% block body %}
    {% spaceless %}
        {% block menubar %}
            <div class="menu">
                <nav>
                    {{ knp_menu_render('main') }}
                </nav>
            </div>
        {% endblock %}
        <div id="page">
            {% block page %}
            {% endblock %}
        </div>
        <div id="footer">
            <hr>
            <div id="footer_content">
                {% block footer %}
                {% endblock %}
            </div>
        </div>
    {% endspaceless %}
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('build/app.js', 'webpack') }}"></script>
{% endblock %}
</body>
</html>
